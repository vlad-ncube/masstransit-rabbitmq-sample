<script type="text/javascript">
    function MyViewModel() {
        stepId++;
        this.step = 'step-template'+stepId;
    }
    
    function next() {
        ko.applyBindings(new MyViewModel());
    }

    function stepTemplate () {
        return this.step;
    }

    this.stepId = 0;
    ko.applyBindings(new MyViewModel());
</script>