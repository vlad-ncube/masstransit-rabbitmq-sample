@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Index</title>
        <script src="~/Scripts/knockout-2.2.1.debug.js" type="text/javascript"></script>
    </head>
    <body>
        <div>
            Here are the steps:
            <div data-bind="template: { data: step, name: stepTemplate.bind($data) }"></div>
        </div>
    </body>
</html>

<script type="text/html" id="step-template1">
    <h3>This is step 1</h3>    
    <form>
        <div>
            <label for="input1">Input 1</label>
            <div>
                <input id="input1"/>
            </div>
        </div>
        <div>
            <button data-bind="click: next">Next</button>
        </div>
    </form>
</script>

